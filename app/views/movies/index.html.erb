<p style="color: green"><%= notice %></p>

<% content_for :title, "Movies" %>

<h1 style="text-align: center">Rotten Potatoes</h1>
<%# <img src="./../../assets/images/rotten_potato.jpeg" alt="rotten potato" style="display: block; max-width: 100%; height: auto; margin: 20px auto; border: 2px solid #ddd; border-radius: 8px;"> %>

<div id="movies" style="text-align: center; border: 4px solid #ccc; padding: 10px; margin: 10px 10px; background-color: #f9f9f9; border-radius: 12px;" >
    <table style="width: 100%; border-spacing: 0 10px; margin: 20px 0;" >
    <thead>
      <tr style="background-color: #A9A9A9; font-size: 1.75em">
        <th class="<%= highlight_sort_column('title') %>">
          <%= link_to "Title", movies_path(sort: 'title', direction: params[:direction] == 'asc' ? 'desc' : 'asc')%>
          <% if params[:sort] == 'title' %>
            <%= params[:direction] == 'asc' ? '▲' : '▼' %>
          <% end %>
        </th>
        <th class="<%= highlight_sort_column('rating') %>">
          <%= link_to "Rating", movies_path(sort: 'rating', direction: params[:direction] == 'asc' ? 'desc' : 'asc')%>
          <% if params[:sort] == 'rating' %>
            <%= params[:direction] == 'asc' ? '▲' : '▼' %>
          <% end %>
        </th>
        <th class="<%= highlight_sort_column('release_date') %>">
          <%= link_to "Release Date", movies_path(sort: 'release_date', direction: params[:direction] == 'asc' ? 'desc' : 'asc')%>
          <% if params[:sort] == 'release_date' %>
            <%= params[:direction] == 'asc' ? '▲' : '▼' %>
          <% end %>
        </th>
        <th>Show this Movie</th>
    </tr>
    </thead>
    <tbody style="font-size: 1.25em">
      <% @movies.each do |movie| %>
        <tr style="padding: 5px">
          <td class="<%= highlight_sort_column('title') %>"> <%= movie.title%> </td>
          <td class="<%= highlight_sort_column('rating')%>"> <%= movie.rating%> </td>
          <td class="<%= highlight_sort_column('release_date') %>"> <%= movie.release_date%> </td>
          <td>
            <%= link_to "Show this movie", movie %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>

<br>
<hr>

<div style="text-align: center; padding: 10px 0; font-size: 40px">
  <%= link_to "New movie", new_movie_path, style: "color: #A0AA00; font-size: 30px"  %>
</div>
